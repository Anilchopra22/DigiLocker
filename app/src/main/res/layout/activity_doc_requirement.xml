<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anichopr.digilocker.DocRequirementActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="20dip"
        android:minWidth="200dp"
        android:progress="50" />

    <TextView
        android:id="@+id/document_progress_title"
        android:layout_below="@+id/progressBar"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="You are one document short of applying for passport."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bodycolor"/>

    <View
        android:id="@+id/document_progress_seperator"
        android:layout_below="@+id/document_progress_title"
        android:layout_width="fill_parent"
        android:layout_margin="8dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/checklist_title"
        android:layout_below="@+id/document_progress_seperator"
        android:text="DOCUMENT REQUIRED"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/checklist_listview"
        android:layout_below="@+id/checklist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/apply_button"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        android:padding="10dp"
        />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anichopr.digilocker.HowtoActivity">

    <TextView
        android:id="@+id/how_to_title"
        android:text="PICK A DOCUMENT"
        android:textColor="@color/black_overlay"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"

         />

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/howto_listview"
        android:layout_below="@+id/how_to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/services"
        android:text="SERVICES"
        android:textColor="@color/black_overlay"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howto_listview"
        android:textStyle="bold"

         />
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/howto_services_listview"
        android:layout_below="@+id/services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
